<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RealmRecyclerView">
        <!-- Layout resource ID to inflate and use as an empty view. None by default. -->
        <attr name="emptyLayoutId" format="reference"/>
        <!-- Whether to enable swipe or not. False by default -->
        <attr name="swipe" format="boolean"/>
        <!-- Whether to enable drag and drop or not. False by default. -->
        <attr name="dragAndDrop" format="boolean"/>
        <!-- Whether long clicking a view will cause a drag to be started. False by default. -->
        <attr name="longClickTriggersDrag" format="boolean"/>
        <!-- Whether to enable the fast scroller. False by default.
             Also see the "rrvlUseFastScrollBubble" and "rrvlAutoHideFastScrollHandle". -->
        <attr name="fastScroll" format="boolean"/>
        <!-- Whether to auto-hide the fast scroller's handle. False by default (handle will stay visible). -->
        <attr name="autoHideFastScrollHandle" format="boolean"/>
        <!-- If fast scroller handle auto-hiding is turned on, this is the amount of time the handle will stay visible
             before hiding. 2000 ms by default. Values below 0 are ignored. -->
        <attr name="handleAutoHideDelay" format="integer"/>
        <!-- Whether to use the fast scroller's section bubble. False by default. If set to true, be sure to have your
             adapter override {@link RealmBasedRecyclerViewAdapter#getFastScrollBubbleText(int)}. -->
        <attr name="useFastScrollBubble" format="boolean"/>

        <attr name="rvPaddingStart" format="dimension"/>
        <attr name="rvPaddingTop" format="dimension"/>
        <attr name="rvPaddingEnd" format="dimension"/>
        <attr name="rvPaddingBottom" format="dimension"/>
        <attr name="rvPadding" format="dimension"/>
    </declare-styleable>
</resources>